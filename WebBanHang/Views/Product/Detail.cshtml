                                    <div class="col-sm-8">
                                        <div class="price-box">
                                            @if(Model.isSale()){
                                                <div class="price">@Html.FormatCurrency(@Model.SalePrice) đ</div>
                                                <div class="price-strike">@Html.FormatCurrency(@Model.Price) đ</div>
